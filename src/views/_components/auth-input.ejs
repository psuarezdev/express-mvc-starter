<div>
  <label for="<%= name %>" class="block text-sm/6 font-medium text-black dark:text-white">
    <%= label %>
  </label>
  <div class="mt-2">
    <input 
      type="<%= type %>" 
      name="<%= name %>" 
      id="<%= name %>" 
      class="block w-full rounded-md bg-gray-800 px-3 py-1.5 text-base text-gray-100 outline outline-1 -outline-offset-1 outline-gray-700 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
    />
  </div>
  <% if (error) { %>
    <span class="text-red-600 text-sm">
      <%= error %>
    </span>
  <% } %>
</div>
